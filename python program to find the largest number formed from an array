arr = [54, 546, 548, 60]

# define a function to sort the array in descending order based on the concatenated string of the numbers
def largest_number(arr):
    arr = [str(x) for x in arr]
    arr.sort(reverse=True, key=lambda x: x * 3)
    return ''.join(arr)
print(largest_number(arr))
output:
6054854654

